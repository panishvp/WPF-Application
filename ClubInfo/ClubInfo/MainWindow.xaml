<Window x:Class="ClubInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubInfo"
        mc:Ignorable="d"
        Background="Wheat"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="600" Width="800">
    <Grid Margin="0,0,0,-2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="606*"/>
        </Grid.ColumnDefinitions>

        <StackPanel HorizontalAlignment="Left" Height="540"  VerticalAlignment="Top" Width="165" RenderTransformOrigin="1.494,0.433" Grid.ColumnSpan="2">
            <Button Content="Club Home" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Width="130" Height="70"/>
            <Button Content="Players" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="130" Height="70" Click="Button_Open_Player_Details_Window"/>
            <Button Content="Coach" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="130" Height="70" Click="Button_Open_Coach_Details_Window"/>
            <Button Content="Matches" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="130" Height="70" Click="Matches_Button_Click"/>
        </StackPanel>



        <StackPanel HorizontalAlignment="Left" Height="561"   VerticalAlignment="Top" Width="612" Grid.Column="1" Margin="27,0,0,0" Grid.ColumnSpan="2">
            <TextBlock Text="Welcome to ClubInfo Application" HorizontalAlignment="Center" FontSize="30" Margin="0,10,0,0" />

        </StackPanel>

    </Grid>
</Window>
